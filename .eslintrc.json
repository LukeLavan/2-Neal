{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true
    },
    "extends": [
        "eslint:recommended",
        "@typhonjs-fvtt/eslint-config-foundry.js"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["error", { "varsIgnorePattern": "_", "argsIgnorePattern": "_" }],
        "no-shadow": ["error", { "builtinGlobals": true, "hoist": "all", "allow": ["event"] }]
    }
}
